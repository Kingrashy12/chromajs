{
  "name": "styled-chroma",
  "version": "0.1.76",
  "description": "A flexible styling library for React that brings simplicity and power to your component design",
  "type": "module",
  "main": "dist/styled-chroma.cjs.js",
  "module": "dist/styled-chroma.es.js",
  "browser": "dist/styled-chroma.umd.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/styled-chroma.es.js",
      "require": "./dist/styled-chroma.cjs.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "dist/types"
  ],
  "scripts": {
    "build": "rollup -c",
    "postbuild": "copyfiles -u 1 src/types/**/* dist/",
    "prerelease": "npx tsc --noEmit",
    "release": "npm version patch && git push origin main --follow-tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SecptrumLab/styled-chroma.git"
  },
  "keywords": [
    "styling",
    "css-in-js",
    "react"
  ],
  "author": "Rapheal Chizitere",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/SecptrumLab/styled-chroma/issues"
  },
  "homepage": "https://github.com/SecptrumLab/styled-chroma/wiki",
  "devDependencies": {
    "@babel/preset-env": "^7.25.7",
    "@babel/preset-react": "^7.25.7",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-typescript": "^12.1.0",
    "@types/react": "^18.3.11",
    "copyfiles": "^2.4.1",
    "rollup": "^4.24.0",
    "rollup-plugin-delete": "^2.1.0",
    "rollup-plugin-esbuild": "^6.1.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-visualizer": "^5.12.0",
    "typescript": "^5.6.2"
  },
  "peerDependencies": {
    "react": ">= 18.0.0",
    "react-dom": ">= 18.0.0"
  },
  "dependencies": {
    "csstype": "^3.1.3"
  }
}
